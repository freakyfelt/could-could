{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://raw.githubusercontent.com/freakyfelt/could-could/main/schemas/resource-policy-2023-02.schema.json",
  "type": "object",
  "required": ["actions", "policies"],
  "properties": {
    "actions": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/actionName" },
      "uniqueItems": true
    },
    "policies": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/ActionPolicyDefinition" }
    }
  },
  "$defs": {
    "ActionPolicyDefinition": {
      "type": "object",
      "required": ["action", "effect", "constraint"],
      "properties": {
        "action": {
          "oneOf": [
            { "$ref": "#/$defs/actionName" },
            {
              "type": "array",
              "minItems": 1,
              "items": { "$ref": "#/$defs/actionName" },
              "uniqueItems": true
            }
          ]
        },
        "effect": {
          "enum": ["allow", "deny"],
          "description": "determines if this policy denies or allows if true. Deny always has precedence"
        },
        "constraint": {
          "oneOf": [
            {
              "type": "object",
              "additionalProperties": true
            },
            { "type": "boolean" }
          ]
        },
        "description": {
          "type": "string",
          "description": "an optional description of what the policy does"
        }
      }
    },
    "actionName": {
      "type": "string",
      "pattern": "^(\\*|[A-z0-9\\.:_-]+)$"
    }
  }
}
