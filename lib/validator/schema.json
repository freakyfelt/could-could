{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://github.com/freakyfelt/could-could/schema.json",
  "type": "object",
  "required": ["resourceType", "actions", "definitions"],
  "properties": {
    "resourceType": { "$ref": "#/$defs/resourceType" },
    "actions": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/actionName" },
      "uniqueItems": true
    },
    "definitions": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/EnvironmentPolicyDefinition" }
    }
  },
  "$defs": {
    "EnvironmentPolicyDefinition": {
      "type": "object",
      "required": ["environment", "policies"],
      "properties": {
        "environment": {
          "oneOf": [
            { "$ref": "#/$defs/environmentName" },
            {
              "type": "array",
              "minItems": 1,
              "items": { "$ref": "#/$defs/environmentName" },
              "uniqueItems": true
            }
          ]
        },
        "policies": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/ActionPolicyDefinition" }
        }
      }
    },
    "ActionPolicyDefinition": {
      "type": "object",
      "required": ["action", "effect", "constraint"],
      "properties": {
        "action": {
          "oneOf": [
            { "$ref": "#/$defs/actionName" },
            {
              "type": "array",
              "minItems": 1,
              "items": { "$ref": "#/$defs/actionName" },
              "uniqueItems": true
            }
          ]
        },
        "effect": {
          "enum": ["allow", "deny"],
          "description": "determines if this policy denies or allows if true. Deny always has precedence"
        },
        "constraint": {
          "oneOf": [
            {
              "type": "object",
              "additionalProperties": true
            },
            { "type": "boolean" }
          ]
        },
        "description": {
          "type": "string",
          "description": "an optional description of what the policy does"
        }
      }
    },
    "actionName": {
      "type": "string",
      "pattern": "^(\\*|[A-z0-9\\.:_-]+)$"
    },
    "environmentName": {
      "type": "string",
      "pattern": "^(\\*|[A-z0-9\\.:_-]+)$"
    },
    "resourceType": {
      "type": "string",
      "pattern": "^(\\*|[A-z0-9\\.:_-]+)$"
    }
  }
}
